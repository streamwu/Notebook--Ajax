<!DOCTYPE html>
<html>
<head>
  <title>Notebook</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">

  <%= csrf_meta_tags %>
</head>
<body>
  <div id="container" class="notepad">
    <header>
      <h1>
        <%= link_to image_tag('bulb.jpg', :size => '75x100'), root_url %>
        <%= link_to 'Aha! Notebook', root_url %>
      </h1>
    </header>
    <section>
      <%= yield %>
    </section>
  </div>
</body>
</html>
